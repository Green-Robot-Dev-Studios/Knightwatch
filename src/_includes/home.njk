---
layout: base.njk
---

{{ content | safe }}

<!-- <h1>Recent Articles</h1> -->


<div class="articles">
  <div class="col" data-columns>
    {% for item in collections.all | clean | shuffle %}
      <div class="card item" data-aos="fade-up" onclick="location.href='{{ item.url | url }}'">
        <a class="card-title times" href="{{ item.url | url }}">{{ item.data.title }}</a>
        {% first_image item %}
        <div class="card-info">
          <div class="card-meta">
            <span class="card-author">{{ item.data.author }}</span>
          </div>
          <p class="card-blurb line-clamp">{% blurb item %}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>