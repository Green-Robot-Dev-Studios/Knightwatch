---
layout: base.njk
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /section/{{ tag }}/
eleventyExcludeFromCollections: true
---
<!-- <h1>{{ tag | deslug | title }} Page</h1> -->


{% set taglist = collections[tag] %}
<div class="articles">
  <div class="col">
    {% for post in taglist | shuffle | splitInto(0) %}
    <div class="card" data-aos="fade-up">
      <a class="card-title" href="{{ post.url | url }}">{{ post.data.title }}</a>
      {% first_image post %}
        <div class="card-info">
          <div class="card-meta">
            <span class="card-author">{{ post.data.author }}</span>
          </div>
          <p class="card-blurb line-clamp">{% blurb post %}</p>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="col">
    {% for post in taglist | shuffle | splitInto(1) %}
    <div class="card" data-aos="fade-up">
      <a class="card-title" href="{{ post.url | url }}">{{ post.data.title }}</a>
      {% first_image post %}
        <div class="card-info">
          <div class="card-meta">
            <span class="card-author">{{ post.data.author }}</span>
          </div>
          <p class="card-blurb line-clamp">{% blurb post %}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>